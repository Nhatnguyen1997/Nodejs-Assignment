<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <!-- Latest compiled and minified CSS -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

     <!-- Latest compiled JavaScript -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
     <style>
      form{
  width: 90%;
  margin: 20px auto;
  box-shadow: 0 0 2px;
  border-radius: 10px;
  padding: 20px;
  background-color: antiquewhite;
}
  </style>
</head>
<body>

    <div class="container">
    <h1  class="pagination justify-content-center">Sửa sản phẩm</h1>
    <form action="list" class="was-validated"  id="edit-form">
        <div class="mb-3 mt-3">
          <label for="uname" class="form-label">Tên sản phẩm:</label>
          <input type="text" class="form-control" id="uname"  name="uname" required>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
          <label for="pwd" class="form-label">Giá sản phẩm:</label>
          <input type="password" class="form-control"   name="pswd" required>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
          <label for="pwd" class="form-label">Nhà sản xuất:</label>
          <input type="password" class="form-control"   name="pswd" required>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
          <label for="pwd" class="form-label">Ảnh minh họa:</label>
          <input type="file" class="form-control"  name="pswd" required>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="mb-3">
            <label for="pwd" class="form-label">Màu Sắc:</label>
            <input type="text" class="form-control"  name="pswd" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3">
            <label for="pwd" class="form-label">Loại Sản Phẩm:</label>
            <input type="text" class="form-control"  name="pswd" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3">
            <label for="pwd" class="form-label">Mã Khách Hàng:</label>
            <input type="text" class="form-control"  name="pswd" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3">
            <label for="pwd" class="form-label">Tên Khách Hàng:</label>
            <input type="text" class="form-control"  name="pswd" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
           <button class="btn btn-primary"><a class="nav-link" href="/list"  >Hủy</a></button>
            
       
        <button type="submit" class="btn btn-primary">Sửa</button>
      </form>
    </div>
    <script>
      // Add a submit event listener to the form
      const editForm = document.getElementById("edit-form");

      editForm.addEventListener("submit", function (e) {
          e.preventDefault(); 
          alert("Sửa thành công"); 
          editForm.reset();
          window.location.href = "/list";
      });
  </script>
</body>

   

</html>
